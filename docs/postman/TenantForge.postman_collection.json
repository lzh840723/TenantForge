{
  "info": {
    "name": "TenantForge API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for TenantForge backend API"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "OpenAPI JSON",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v3/api-docs",
          "host": ["{{baseUrl}}"],
          "path": ["v3", "api-docs"]
        }
      }
    },
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tenantName\": \"demo-tenant\",\n  \"email\": \"demo@tenantforge.dev\",\n  \"password\": \"Password123!\",\n  \"displayName\": \"Demo Owner\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"demo@tenantforge.dev\",\n  \"password\": \"Password123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Projects - Create",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sample Project\",\n  \"description\": \"demo\"\n}"
        },
        "url": {"raw": "{{baseUrl}}/api/projects", "host": ["{{baseUrl}}"], "path": ["api", "projects"]}
      }
    },
    {
      "name": "Projects - List",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
        "url": {
          "raw": "{{baseUrl}}/api/projects?size=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "projects"],
          "query": [{"key": "size", "value": "10"}]
        }
      }
    },
    {
      "name": "Reports - Time (JSON)",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
        "url": {
          "raw": "{{baseUrl}}/api/reports/time?period=week",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "time"],
          "query": [{"key": "period", "value": "week"}]
        }
      }
    }
  ],
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:8080"},
    {"key": "accessToken", "value": ""}
  ]
}

